<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondotro"
    tools:context=".vistas.OtroFragment">
    <TextView
        android:text="Busqueda de plato"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/go3v2"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/txt_buscar"
        android:layout_width="360dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:shadowColor="@color/white"
        android:fontFamily="@font/hogback"
        android:textColor="@color/white"
        android:textColorHint="#808080"
        android:layout_marginLeft="15dp"
        android:hint="Nombre del platillo" />

    <Button
        android:id="@+id/btn_Buscar"
        android:textAllCaps="false"
        android:text="Buscar"
        android:fontFamily="@font/go3v2"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF00"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:background="@drawable/bordes"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_Scan"
        android:textAllCaps="false"
        android:text="Scanear QR"
        android:fontFamily="@font/go3v2"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF00"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:background="@drawable/bordes"
        android:layout_height="wrap_content"/>
</LinearLayout>